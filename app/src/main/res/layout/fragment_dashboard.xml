<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <ProgressBar
            android:id="@+id/dashboardProgressBar"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:indeterminateDrawable="@drawable/loader_animation"
            android:layout_gravity="center"
            android:visibility="visible" />

        <LinearLayout
            android:id="@+id/dashboardContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Your Progress Dashboard"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:textStyle="bold"/>

            <!-- Key Stats Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="24dp"
                android:weightSum="3">
                <!-- Text views for Total Questions, Avg Confidence, Study Days go here -->
            </LinearLayout>

            <!-- Sectional Confidence Pie Chart -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sectional Confidence"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:layout_marginTop="32dp"/>
            <com.github.mikephil.charting.charts.PieChart
                android:id="@+id/sectionalPieChart"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_marginTop="8dp"/>

            <!-- Topic Performance Radar Chart -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Topic Performance Score (PPM)"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:layout_marginTop="32dp"/>
            <com.github.mikephil.charting.charts.RadarChart
                android:id="@+id/topicRadarChart"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_marginTop="8dp"/>

            <!-- Weakest Topics Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Top 3 Areas to Focus On"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:layout_marginTop="32dp"/>
            <LinearLayout
                android:id="@+id/weakestTopicsLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="8dp"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
