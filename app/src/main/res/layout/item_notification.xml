<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#1C1C1E"
    android:padding="16dp"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="8dp">

    <!-- Timestamp at the top -->
    <TextView
        android:id="@+id/notificationTimestampText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Jun 30, 2025, 8:00 AM"
        android:textColor="#A0A0A0"
        android:textSize="12sp"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:id="@+id/notificationTitleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your Daily Prep Briefing"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/notificationBodyText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Here is the plan for today... with a lot more text to see how it truncates properly and shows the rest of the content."
        android:textColor="#E0E0E0"
        android:textSize="14sp"
        android:layout_marginTop="8dp"
        android:maxLines="3"
        android:ellipsize="end"/>
        
    <!-- "Show More" button -->
    <TextView
        android:id="@+id/showMoreText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Show More"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:layout_marginTop="8dp"
        android:visibility="gone"/>

</LinearLayout>
