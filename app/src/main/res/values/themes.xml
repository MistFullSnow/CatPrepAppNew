<style name="Theme.CatPrepApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
    <!-- Primary brand color. -->
    <item name="colorPrimary">@color/white</item>
    <item name="colorPrimaryVariant">@color/white</item>
    <item name="colorOnPrimary">@color/black</item>
    <!-- Secondary brand color. -->
    <item name="colorSecondary">#4A4A4C</item> <!-- A nice dark grey -->
    <item name="colorSecondaryVariant">#4A4A4C</item>
    <item name="colorOnSecondary">@color/white</item>
    <!-- Status bar color. -->
    <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
    
    <!-- THIS IS THE KEY FIX: It controls the color of sliders, progress bars, etc. -->
    <item name="colorAccent">@color/white</item>
</style>
